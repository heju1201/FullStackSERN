<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Display Users</title>
    <!-- Latest compiled and minified CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <h1>display users</h1>
    <table class="table table-dark table-hover">
        <thead>
          <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Gender</th>
            <th>Phone Number</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
            <% dataUsers.forEach(function(user){ %>
          <tr>
            <td><%= user.firstName %></td>
            <td><%= user.lastName %></td>
            <td><%= user.email %></td>
            <td><%= user.address %></td>
            <td><%= user.gender %></td>
            <td><%= user.phoneNumber %></td>
            <td>
              <a href="/edit-user?id=<%= user.id %>" type="button" class="btn btn-warning">Edit</a>
              <a href="/delete-user?id=<%= user.id %>" type="button" class="btn btn-danger">Delete</a>
            </td>
          </tr>
          <% });%>
        </tbody>
    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
